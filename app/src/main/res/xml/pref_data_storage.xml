<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="poll_frequency"
        android:title="@string/pref_title_poll_frequency"
        android:entries="@array/pref_poll_frequency_titles"
        android:entryValues="@array/pref_poll_frequency_values"
        android:defaultValue="3"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->
    <Preference
        android:title="@string/pref_title_create_backup"
        android:key="@string/pref_title_create_backup">

    </Preference>

    <Preference android:title="@string/pref_title_manage_backups"
        android:key="@string/pref_title_manage_backups">

    </Preference>



</PreferenceScreen>
